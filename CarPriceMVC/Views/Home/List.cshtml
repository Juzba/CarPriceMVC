@{
	ViewData["Title"] = "Car List";
}

@model IList<Car>


<div>
	<h1 class="my-4">Seznam aut v databázi.</h1>

	@if (Model.Count > 0) {<a asp-action="Result" asp-controller="Home" class="btn btn-light" style="box-shadow: 0 0 20px white">" Součet Modelu Aut "</a>}
	<div class="my-4">
		<a asp-action="EditCar" asp-controller="Home" class="btn btn-outline-info">Přidat Auto</a>
		<a asp-action="DeleteAll" asp-controller="Home" class="btn btn-outline-danger ms-2">Vymazat všě z DB</a>
	</div>

	<table class="table table-bordered table-dark">
		<thead>
			<tr>
				<th>Id</th>
				<th>Model</th>
				<th>Datum</th>
				<th>Cena</th>
				<th>DPH</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			@foreach (var car in Model)
			{
				<tr>
					<td>@car.Id</td>
					<td>@car.Name</td>
					<td>@car.DateT</td>
					<td>@car.Price.ToString("C2")</td>
					<td>@car.DPH</td>
					<td>
						<a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Home" asp-route-id="@car.Id">Smazat</a>
					</td>
				</tr>
			}
		</tbody>
	</table>













</div>